[
    {
        "key": "Ctrl+Shift+ENTER",
        "command": ["run", "powershell", "-command", "mpv.exe", "%F"]
    },
    {
        "key": "Ctrl+c",
        "command": [
            ["run", "powershell", "-command", "Set-Clipboard", "%F"],
            ["print-text", "copied filepath to clipboard"]
        ]
    },
    {
        "key": "Ctrl+o",
        "command": ["run", "powershell", "-command", "explorer.exe", "(( %P ).TrimEnd('/') -replace '/', '\\' )"],
        "multiselect": false
    },
    {
        "key": "Ctrl+O",
        "command": ["run", "powershell", "-command", "explorer.exe", "(( %F ).TrimEnd('/') -replace '/', '\\' )"],
        "filter": "dir"
    },
    {
        "key": "Alt+o",
        "command": [
            ["script-binding", "file_browser/dynamic/1/close"],
            ["script-message", "type", "script-message browse-directory \"\" \n; script-binding console/_console_1", "34"]
        ],
        "multiselect": false
    },
    {
        "key": "INS",
        "command": ["run", "powershell", "-command", "Add-Content", "-LiteralPath", "( %P + '/.ordered-chapters.m3u' )", "-Value", "%N"],
        "multiselect": false
    },
    {
        "key": "Ctrl+INS",
        "command": ["run", "powershell", "-command", "rm", "-LiteralPath", "( %P + '/.ordered-chapters.m3u' )", "-Force"],
        "multiselect": false
    }
]